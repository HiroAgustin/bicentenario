<% layout('../../../layouts/default') %>
<div class="HolyGrail-body Aligner">
    <section class="container u-paddingVl">
        <h1 class="text-center">Registro</h1>
        <div class="row">
            <form action="/mis-leyes" method="GET" class="col-md-8 col-md-offset-2">
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <legend class="text-center">Antes que nada necesitamos que completes el formulario para mostrar la informacón.</legend>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" name="nombre" class="form-control" id="nombre" value="<%= user.name %>">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="edad">Edad</label>
                            <select name="edad" class="form-control" id="edad">
                                <option value=""></option>
                                <option value="nino">Niño</option>
                                <option value="joven" <%= user.isYoung ? 'selected' : '' %>>Joven</option>
                                <option value="adulto" <%= user.isAdult ? 'selected' : '' %>>Adulto</option>
                                <option value="mayor">Mayor</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="sexo">Sexo</label>
                            <select name="sexo" class="form-control" id="sexo">
                                <option value=""></option>
                                <option value="hombre" <%= user.isMale ? 'selected' : '' %>>Hombre</option>
                                <option value="mujer" <%= user.isFemale ? 'selected' : '' %>>Mujer</option>
                                <option value="otro">Otro</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="estado-civil">Estado civil</label>
                            <select name="estado-civil" class="form-control" id="estado-civil">
                                <option value=""></option>
                                <option value="casado">Casado</option>
                                <option value="soltero">Soltero</option>
                                <option value="concubinato">Concubinato</option>
                                <option value="viudo">Viudo</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="residencia">País de residencia</label>
                            <select name="residencia" class="form-control" id="residencia">
                                <option value="uruguay">Uruguay</option>
                                <option value="extranjero">Extranjero</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="dicapacidad" value="si">
                        Incluir leyes sobre discapacidad.
                    </label>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="identidad-genero" value="si">
                        Incluir leyes de identidad de genero.
                    </label>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="identidad-racial" value="si">
                        Incluir leyes sobre identidad racial.
                    </label>
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="hijos" value="si">
                        Incluir leyes sobre hijos.
                    </label>
                </div>
                
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <button type="submit" class="btn btn-default btn-lg btn-block">Continuar</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>